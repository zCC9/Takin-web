    <profiles>
        <!-- 通用的私有化部署 -->
        <profile>
            <id>standard-private</id>
            <properties>
                <profile.active>standard-private</profile.active>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>io.shulie.takin</groupId>
                    <artifactId>takin-web-config-sync-zk-impl</artifactId>
                </dependency>
            </dependencies>
        </profile>
        <!-- 通用的公有化部署 -->
        <profile>
            <id>standard-public</id>
            <properties>
                <profile.active>standard-public</profile.active>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>io.shulie.takin</groupId>
                    <artifactId>takin-web-diff-cloud</artifactId>
                    <exclusions>
                        <exclusion>
                            <groupId>com.github.pagehelper</groupId>
                            <artifactId>pagehelper-spring-boot-autoconfigure</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
                <dependency>
                    <groupId>io.shulie.takin</groupId>
                    <artifactId>takin-web-config-sync-zk-impl</artifactId>
                </dependency>
            </dependencies>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>

        <!-- 通用容器化部署 -->
        <profile>
            <id>standard-share</id>
            <properties>
                <profile.active>share</profile.active>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>io.shulie.takin</groupId>
                    <artifactId>takin-web-diff-cloud</artifactId>
                </dependency>
                <dependency>
                    <groupId>io.shulie.takin</groupId>
                    <artifactId>takin-web-config-sync-zk-impl</artifactId>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
    <build>
        <finalName>takin-web_${profile.active}_${project.version}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <!--    插件化框架接入    -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.6.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <!--                    <proc>none</proc>-->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring.boot.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
